<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="0px"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="sg.nemysolutions.hapme.activity.HomeActivity"
    android:gravity="center">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Create New Operation"
        android:id="@+id/bn_create"
        android:minHeight="80dp"
        android:layout_centerHorizontal="true"
        android:maxHeight="80dp" />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Join an operation"
        android:id="@+id/bn_join"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bn_create"
        android:minHeight="80dp"
        android:layout_marginTop="10dp"
        android:maxHeight="80dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select an option"
        android:id="@+id/tv_pleaseChoose"
        android:layout_above="@+id/bn_create"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

</RelativeLayout>

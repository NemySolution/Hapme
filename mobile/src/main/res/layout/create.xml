<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="sg.nemysolutions.hapme.CreateActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Operation Name:"
        android:id="@+id/textView"
        android:layout_alignBaseline="@+id/editText_opsName"
        android:layout_alignBottom="@+id/editText_opsName"
        android:layout_alignEnd="@+id/textView2" />



    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_opsName"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Commander Callsign:"
        android:id="@+id/textView2"
        android:layout_alignBaseline="@+id/editText_cmdCallsign"
        android:layout_alignBottom="@+id/editText_cmdCallsign"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_cmdCallsign"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/editText_opsName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List of Members:"
        android:id="@+id/textView3"
        android:layout_marginTop="19dp"
        android:layout_alignTop="@+id/listView_addMember"
        android:layout_toStartOf="@+id/listView_addMember" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Operation"
        android:id="@+id/btn_createOps"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView_addMember"
        android:layout_below="@+id/editText_cmdCallsign"
        android:layout_alignStart="@+id/editText_cmdCallsign"
        android:smoothScrollbar="true"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/listView_addCmd" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Member"
        android:id="@+id/bn_addMember"
        android:layout_below="@+id/editText_cmdCallsign"
        android:layout_alignEnd="@+id/textView3"
        android:layout_marginTop="94dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_addCmd"
        android:layout_above="@+id/btn_createOps"
        android:smoothScrollbar="false"
        android:layout_alignStart="@+id/listView_addMember"
        android:layout_alignTop="@+id/textView4"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List of Command:"
        android:id="@+id/textView4"
        android:layout_marginTop="93dp"
        android:layout_below="@+id/bn_addMember"
        android:layout_alignEnd="@+id/bn_addMember" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Command"
        android:id="@+id/btn_addCmd"
        android:layout_alignBottom="@+id/listView_addCmd"
        android:layout_toStartOf="@+id/listView_addCmd"
        android:layout_marginBottom="57dp" />

</RelativeLayout>

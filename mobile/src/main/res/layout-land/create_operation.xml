<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="sg.nemysolutions.hapme.activity.CreateOperationActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Operation Name:"
        android:id="@+id/tv_operationName"
        android:layout_alignBaseline="@+id/et_opsName"
        android:layout_alignBottom="@+id/et_opsName"
        android:layout_alignEnd="@+id/tv_commanderCallsign" />



    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_opsName"
        android:layout_alignParentTop="true"
        android:imeOptions="flagNavigateNext"
        android:singleLine="true"
        android:layout_toEndOf="@+id/tv_operationName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Commander Callsign:"
        android:id="@+id/tv_commanderCallsign"
        android:layout_alignBaseline="@+id/et_callSign"
        android:layout_alignBottom="@+id/et_callSign"
        android:layout_alignParentStart="true"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_callSign"
        android:layout_below="@+id/tv_operationName"
        android:layout_alignStart="@+id/et_opsName"
        android:imeOptions="flagNavigateNext"
        android:singleLine="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secret Key:"
        android:id="@+id/tv_secretKey"
        android:layout_alignBaseline="@+id/et_secretKey"
        android:layout_alignBottom="@+id/et_secretKey"
        android:layout_alignEnd="@+id/tv_commanderCallsign" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Operation"
        android:id="@+id/bn_createOps"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/et_secretKey"
        android:layout_marginBottom="30dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lv_addCmd"
        android:smoothScrollbar="false"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/bn_addCmd"
        android:layout_toStartOf="@+id/bn_createOps" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List of Command:"
        android:id="@+id/tv_listOfCommand"
        android:layout_above="@+id/lv_addCmd"
        android:textSize="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Command"
        android:id="@+id/bn_addCmd"
        android:layout_below="@+id/et_secretKey"
        android:layout_toEndOf="@+id/tv_listOfCommand"
        android:src="@drawable/button_add"
        android:background="@null"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_secretKey"
        android:layout_below="@+id/et_callSign"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/et_callSign"
        android:imeOptions="actionDone"
        android:singleLine="true"/>

</RelativeLayout>

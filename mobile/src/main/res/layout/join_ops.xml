    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="sg.nemysolutions.hapme.activity.JoinOpsActivity"
         android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_opsName"
                android:hint="Name of Operation"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:imeOptions="flagNavigateNext"
                android:singleLine="true"
                android:layout_toEndOf="@+id/textView2" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_callSign"
                android:hint="Your Call Sign"
                android:layout_below="@+id/et_opsName"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:imeOptions="flagNavigateNext"
                android:singleLine="true"
                android:layout_toEndOf="@+id/textView3" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join"
                android:id="@+id/bn_join"
                android:layout_below="@+id/et_secretKey"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_secretKey"
                android:layout_below="@+id/et_callSign"
                android:hint="Operation's Secret Key"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:layout_toEndOf="@+id/textView4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ops Name: "
                android:id="@+id/textView2"
                android:layout_alignBottom="@+id/et_opsName"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CallSign: "
                android:id="@+id/textView3"
                android:layout_alignBottom="@+id/et_callSign"
                android:layout_alignEnd="@+id/textView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SecretKey: "
                android:id="@+id/textView4"
                android:layout_alignBottom="@+id/et_secretKey"
                android:layout_toStartOf="@+id/et_callSign" />
        </RelativeLayout>
    </ScrollView>

